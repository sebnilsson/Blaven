<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net451;netstandard1.3</TargetFrameworks>
    <RootNamespace>Blaven</RootNamespace>
    <PlatformTarget>AnyCPU</PlatformTarget>

    <PackageId>Blaven</PackageId>
    <Description>Synchronize blog-data from external services to your own data-storage</Description>
    <Authors>Sebastian Nilsson</Authors>
    <Company />
    <Product>Blaven</Product>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Linq.Queryable" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <PackageReference Include="System.Globalization.Extensions">
      <Version>4.3.0</Version>
    </PackageReference>
  </ItemGroup>
    
</Project>