@{
    string viewBagTitle = Convert.ToString(ViewBag.Title);
    string pageSuffix = "BloggerViewController";
    string pageTitle = !string.IsNullOrWhiteSpace(viewBagTitle) ? string.Format("{0} - {1}", viewBagTitle, pageSuffix) : pageSuffix; 
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@pageTitle</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
</head>

<body>
    @RenderBody()

    @RenderSection("Navigation", false)
</body>
</html>
